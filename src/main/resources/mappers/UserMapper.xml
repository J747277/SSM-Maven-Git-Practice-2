<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hnjd.ssm.mapper.UserMapper">
    <resultMap id="baseResultMap" type="User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="born_date" property="bornDate"/>
        <result column="head_img" property="headImg"/>
        <result column="salary" property="salary"/>
        <association property="gradeId" javaType="grade">
            <id column="grade_id" property="id"/>
            <result column="grade_name" property="gradeName"/>
        </association>
    </resultMap>

    <sql id="joinGrade">
        join grade g where u.grade_id = g.id
    </sql>

    <!--若客户未输入创建时间则不需要设置创建时间-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user(username,password,
        <if test="bornDate != null">
            born_date,
        </if>
        head_img,
        <if test="salary != null">
            salary,
        </if>
        grade_id)values(#{username},#{password},
        <if test="bornDate != null">
            #{bornDate},
        </if>
        #{headImg},
        <if test="salary != null">
            #{salary},
        </if>
        #{gradeId.id})
    </insert>

    <delete id="deleteById">
		delete from user where id = #{id}
	</delete>

    <!--仅在用户已上传头像之后修改头像-->
    <update id="update">
        update user
        <set>
            <if test="username != null">
                username = #{username} ,
            </if>
            <if test="password != null">
                password = #{password} ,
            </if>
            <if test="bornDate != null">
                born_date = #{bornDate} ,
            </if>
            <if test="headImg != null">
                head_img = #{headImg} ,
            </if>
            <if test="salary != null">
                salary = #{salary} ,
            </if>
            <if test="gradeId != null">
                grade_id = #{gradeId.id}
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="getById" resultMap="baseResultMap">
        select u.*,g.grade_name from user u
        <include refid="joinGrade"/>
        and u.id = #{id}
    </select>

    <select id="selectAll" resultMap="baseResultMap">
        select u.*,g.grade_name from user u
        <include refid="joinGrade"/>
    </select>

    <select id="login" resultMap="baseResultMap">
        select u.*,g.grade_name from user u
        <include refid="joinGrade"/>
        and u.username = #{username} and u.password = #{password}
    </select>
</mapper>